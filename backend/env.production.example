# Configuración de Producción - BIAN-CU Backend
NODE_ENV=production
PORT=3001

# Base de datos MongoDB (usar MongoDB Atlas en producción)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bian-cu-prod?retryWrites=true&w=majority

# URLs y CORS
API_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://app.your-domain.com

# Seguridad
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
SESSION_SECRET=your-super-secure-session-secret-key-here-min-32-chars

# Google OAuth (configurar en Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI (usar tu API key real)
OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (opcional para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SSL/TLS
SSL_ENABLED=true 