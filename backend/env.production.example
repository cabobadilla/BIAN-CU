# Configuración de Producción - BIAN-CU Backend
NODE_ENV=production
PORT=3001

# Base de datos MongoDB (usar MongoDB Atlas en producción)
# Reemplazar con tu URI real de MongoDB Atlas
MONGODB_URI=mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/[DATABASE]?retryWrites=true&w=majority

# URLs y CORS
API_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://app.your-domain.com

# Seguridad
JWT_SECRET=[GENERATE-SECURE-32-CHAR-KEY]
SESSION_SECRET=[GENERATE-SECURE-32-CHAR-KEY]

# Google OAuth (configurar en Google Cloud Console)
GOOGLE_CLIENT_ID=[GOOGLE-CLIENT-ID]
GOOGLE_CLIENT_SECRET=[GOOGLE-CLIENT-SECRET]

# OpenAI (usar tu API key real)
OPENAI_API_KEY=[YOUR-OPENAI-API-KEY]

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (opcional para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=[YOUR-EMAIL]@gmail.com
SMTP_PASS=[YOUR-APP-PASSWORD]

# SSL/TLS
SSL_ENABLED=true 